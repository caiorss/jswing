<jswing>
  <jframe size="500, 600"
          name="frame1"
          resizable="false"
          visible="true"
          layout="border"
          title="Sample Text Editor"
          exitOnClose="true"
          >
    
    <jlabel  name="display" text="Text Editor" pos="north" /> 

    <jscroll pos="center">
      <jtextArea name="tarea" bgColor="gray" fgColor="cyan"/>
    </jscroll>

    <jpanel bgColor="blue" pos="south">
      <jbutton name="btnOpen" text="Open" bgColor="black" fgColor="cyan"  />  
      <jbutton name="btnClear" text="Clear" bgColor="black" fgColor="cyan" />        
    </jpanel>

  </jframe>

</jswing>
